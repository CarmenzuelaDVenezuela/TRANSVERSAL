void setup() {
  size(1920, 1080, FX2D);//Full HD
  hint(ENABLE_KEY_REPEAT);
  fullScreen();
 // audioManager = new Minim(this);
  escenaDeCarga = new EscenaDeCarga();
  escena1 = new Escena1();
 // escena2 = new Escena2();
  escena3 = new Escena3();
  escena4 = new Escena4();
  escena5 = new Escena5();
  escena6 = new Escena6();
  escena7 = new Escena7();
  escena8 = new Escena8();
  escena9 = new Escena9();

  escena11 = new Escena11();
  escena11.inicializar(); 
  estadoGeneral = ESCENA8;
 // flechaDerecha = loadImage("flechaDerecha.png");

escena13 = new Escena13();
}

void draw() {
  switch (estadoGeneral) {
  case ESCENA_DE_CARGA:
    escenaDeCarga.dibujar();
    break;
  case ESCENA1:
    escena1.dibujar();
    break;
 /* case ESCENA2:
    escena2.dibujar();
    break;*/
  case ESCENA3:
    escena3.dibujar();
    break;
  case ESCENA4:
    escena4.dibujar();
    break;
  case ESCENA5:
    escena5.dibujar();
    break;
  case ESCENA6:
    escena6.dibujar();
    break;
  case ESCENA7:
    escena7.dibujar();
    break;
  case ESCENA8:
    escena8.dibujar();
    break;
   case ESCENA9:
    escena9.dibujar(); 
    break;

   case ESCENA11:
      escena11.dibujar();
      break;

case ESCENA13:
    escena13.dibujar();
    break;
  


case ESCENA12:
      background(50, 100, 150);
      fill(255);
      textSize(50);
      textAlign(CENTER, CENTER);
      text("Bienvenido a ESCENA12", width/2, height/2);
      break; //solo para que se vea, luego se cambiará 
  }
}

void mousePressed() {
  switch (estadoGeneral) {
  case ESCENA_DE_CARGA:
    escenaDeCarga.botonPulsado();
    break;
  case ESCENA1:
    escena1.botonPulsado();
    break;
  case ESCENA3:
    escena3.ratonPulsado();
    break;
  case ESCENA5:
    escena5.ratonPulsado();
    break;
  case ESCENA6:
    escena6.ratonPulsado();
    break;  
  case ESCENA7:
    escena7.ratonPulsado();
    break;
  case ESCENA9:
      escena9.ratonPulsado();
      break;

 case ESCENA11:
      escena11.ratonPulsado();
      break;
  }
}

