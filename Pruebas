Escena6 escena6;
Escena7 escena7;
Escena8 escena8;

// Minim audioManager;
// AudioPlayer sonidoGeneral;
// PImage flechaDerecha;

void setup() {
  size(1920, 1080, FX2D);//Full HD
  hint(ENABLE_KEY_REPEAT);
  fullScreen();
 // audioManager = new Minim(this);
  escenaDeCarga = new EscenaDeCarga();
  escena1 = new Escena1();
 // escena2 = new Escena2();
  escena3 = new Escena3();
  escena4 = new Escena4();
  escena5 = new Escena5();
  escena6 = new Escena6();
  escena7 = new Escena7();
  escena8 = new Escena8();
  estadoGeneral = ESCENA8;
 // flechaDerecha = loadImage("flechaDerecha.png");
}

void draw() {
  switch (estadoGeneral) {
  case ESCENA_DE_CARGA:
    escenaDeCarga.dibujar();
    break;
  case ESCENA1:
    escena1.dibujar();
    break;
 /* case ESCENA2:
    escena2.dibujar();
    break;*/
  case ESCENA3:
    escena3.dibujar();
    break;
  case ESCENA4:
    escena4.dibujar();
    break;
  case ESCENA5:
    escena5.dibujar();
    break;
  case ESCENA6:
    escena6.dibujar();
    break;
  case ESCENA7:
    escena7.dibujar();
    break;
  case ESCENA8:
    escena8.dibujar();
    break;
  }
}

void mousePressed() {
  switch (estadoGeneral) {
  case ESCENA_DE_CARGA:
    escenaDeCarga.botonPulsado();
    break;
  case ESCENA1:
    escena1.botonPulsado();
    break;
  case ESCENA3:
    escena3.ratonPulsado();
    break;
  case ESCENA5:
    escena5.ratonPulsado();
    break;
  case ESCENA6:
    escena6.ratonPulsado();
    break;  
  case ESCENA7:
    escena7.ratonPulsado();
    break;
  }
}

/*void mouseMoved() {
  switch (estadoGeneral) {
  case ESCENA2:
    escena2.rotonDetectado();
    break;
  }
}*/

void keyPressed() {
  switch (estadoGeneral) {
 // case ESCENA2:
  //  escena2.teclaPulsada();
   // break;
  case ESCENA7:
    escena7.teclaPulsada();
    break;
  case ESCENA8:
    escena8.teclaPulsada();
    break;
  }
}

void keyReleased() {
  switch (estadoGeneral) {
  /*case ESCENA2:
    escena2.teclaLevantada();
    break*/
  case ESCENA8:
    escena8.teclaLevantada();
    break;
  }
}

void mouseReleased() {
  switch (estadoGeneral) {
  case ESCENA6:
    escena6.ratonLevantado();
  }
}

void mouseDragged() {
  switch (estadoGeneral) {
  case ESCENA6:
    escena6.ratonArrastrado();
  }
}

PImage loadResizedImage(String nombreFichero, int ancho) {
  PImage miImagen = loadImage(nombreFichero);
  float ratio = miImagen.height /float(miImagen.width);
  miImagen.resize(ancho, int(ancho*ratio));
  return miImagen;
}
