PImage loadResizedImage(String nombreFichero, int ancho) {
  PImage miImagen = loadImage(nombreFichero);
  float ratio = miImagen.height /float(miImagen.width);
  miImagen.resize(ancho, int(ancho*ratio));
  return miImagen;
}
